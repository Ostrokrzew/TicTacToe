<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background_table"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|fill_horizontal"
    android:visibility="visible"
    android:background="#ED2C0468"
    tools:context=".MainActivity">

    <TableRow
        android:id="@+id/rowPoints"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:background="@color/turquoisePanties"
        android:gravity="center_horizontal|fill_horizontal|top"
        android:padding="4dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/pointsPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_margin="16dp"
            android:text="@string/playerPoints"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pointsCpu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="@string/cpuPoints"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:id="@+id/row0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/butt00"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_margin="4dp"
            android:background="@color/orangeVirgin"
            android:gravity="center"
            android:minHeight="48dip"
            android:onClick="buttTouch"
            android:padding="4dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="32sp" />

        <Button
            android:id="@+id/butt01"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_margin="4dp"
            android:background="@color/orangeVirgin"
            android:gravity="center"
            android:minHeight="48dip"
            android:onClick="buttTouch"
            android:padding="4dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="32sp" />

        <Button
            android:id="@+id/butt02"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_margin="4dp"
            android:background="@color/orangeVirgin"
            android:gravity="center"
            android:minHeight="48dip"
            android:onClick="buttTouch"
            android:padding="4dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="32sp" />
    </TableRow>

    <TableRow
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/butt10"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_margin="4dp"
            android:background="@color/orangeVirgin"
            android:gravity="center"
            android:minHeight="48dip"
            android:onClick="buttTouch"
            android:padding="4dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="32sp" />

        <Button
            android:id="@+id/butt11"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_margin="4dp"
            android:background="@color/orangeVirgin"
            android:gravity="center"
            android:minHeight="48dip"
            android:onClick="buttTouch"
            android:padding="4dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="32sp" />

        <Button
            android:id="@+id/butt12"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_margin="4dp"
            android:background="@color/orangeVirgin"
            android:gravity="center"
            android:minHeight="48dip"
            android:onClick="buttTouch"
            android:padding="4dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="32sp" />
    </TableRow>

    <TableRow
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/butt20"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_margin="4dp"
            android:background="@color/orangeVirgin"
            android:gravity="center"
            android:minHeight="48dip"
            android:onClick="buttTouch"
            android:padding="4dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="32sp" />

        <Button
            android:id="@+id/butt21"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_margin="4dp"
            android:background="@color/orangeVirgin"
            android:gravity="center"
            android:minHeight="48dip"
            android:onClick="buttTouch"
            android:padding="4dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="32sp" />

        <Button
            android:id="@+id/butt22"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_margin="4dp"
            android:background="@color/orangeVirgin"
            android:gravity="center"
            android:minHeight="48dip"
            android:onClick="buttTouch"
            android:padding="4dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="32sp" />
    </TableRow>

    <TableRow
        android:id="@+id/rowReset"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:padding="8dp">

        <Button
            android:id="@+id/back"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|start"
            android:background="@color/bluePanties"
            android:padding="4dp"
            android:text="@string/back"
            android:textAlignment="center"
            android:textColor="#000000" />

        <Button
            android:id="@+id/reset"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|end"
            android:background="@color/bluePanties"
            android:onClick="reset"
            android:padding="4dp"
            android:text="@string/reset"
            android:textAlignment="center"
            android:textColor="#000000" />
    </TableRow>
</TableLayout>