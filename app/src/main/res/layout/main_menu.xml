<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="slawomirjankowski.tictactoe.MenuActivity"
    android:orientation="horizontal"
    android:background="@color/violetUnderwear">

    <TableRow
        android:id="@+id/rowPoints"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="48dp"
        android:background="@color/pinkThights"
        android:textAlignment="center"
        android:gravity="center|top"
        android:padding="4dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clickable="false"
            android:padding="16dp"
            android:text="@string/title"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:id="@+id/rowPlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="32dp"
        android:background="@color/turquoisePanties"
        android:textAlignment="center"
        android:gravity="center"
        android:padding="4dp"
        android:visibility="visible">

        <Button
            android:id="@+id/play"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="4dp"
            android:text="@string/play"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </TableRow>

    <TableRow
        android:id="@+id/rowQuit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="16dp"
        android:background="@color/turquoisePanties"
        android:textAlignment="center"
        android:gravity="center|bottom"
        android:padding="4dp"
        android:visibility="visible">

        <Button
            android:id="@+id/quit"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:onClick="exit"
            android:text="@string/quit"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </TableRow>
</TableLayout>